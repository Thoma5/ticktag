{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
    // TODO add parameters when swagger produces code which passes this checks
    //"noUnusedLocals": true,
    //"noUnusedParameters": true
    // TODO "strictNullChecks": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
